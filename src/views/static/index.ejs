<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/head.ejs %>
</head>
<body>

  <% include ./partials/navbar.ejs %>

  <main class="container" align="center">

    <% include ../static/partials/messages.ejs %>

    <h1 class="display-3">Blocipedia: Social, Markdown Wikis</h1>
    <header class="jumbotron my-4" align="center">
      <p class="lead">Create and share Markdown Wikis</p>
      <% if(!currentUser) { %>
        <a href="/users/signup" class="btn btn-primary btn-lg">Sign up</a>
      <% } %>
    </header>

        <section class="row text-center">

          <section class="col-lg-6">
            <h4 class="card-title">Create as many public wikis as you want</h4>
            <hr>
            <p class="card-text">Free Plan</p>
            <img src="../../images/free.png" alt="Free Account Blue">
          </section>

          <section class="col-lg-6">
            <h4 class="card-title">Create Private Wikis!</h4>
            <hr>
            <p class="card-text">Premium Plan</p>
            <img src="../../images/premium.png" alt="Premium Account Gold">
          </section>

        </section>

      </main>

      <% include ./partials/baseScripts.ejs %>

    </body>
    </html>
