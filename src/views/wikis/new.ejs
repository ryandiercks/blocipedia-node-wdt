<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
        </div>
        <div class="form-group">
          <input type="radio" name="private" value="false" checked>
          <label for="private">Public Wiki</label>
        </div>
        <% if(currentUser.role === 1 || currentUser.role === 3 ) { %>
        <div class="form-group">
          <input type="radio" name="private" value="true">
          <label for="private">Private Wiki</label>
        </div>
        <% }%>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
